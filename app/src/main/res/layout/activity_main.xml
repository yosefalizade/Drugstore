<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="4"
        android:background="#43e9cae0">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:id="@+id/toolbar"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="مرجع کامل داروها و بیماریها"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="22dp"
                    />

            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>
        <LinearLayout
            android:id="@+id/layout_fav"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:weightSum="3"
            android:paddingRight="12dp"
            android:paddingLeft="12dp">
            <RelativeLayout
                android:id="@+id/rlt_drugs"
                android:layout_margin="10dp"
                android:layout_width="0dp"
                android:layout_weight="1.1"
                android:onClick="btnsClick"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/drugs_main"/>
                <TextView
                    android:id="@+id/txt_drugs_tedad"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_margin="1dp"
                    android:text="10"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:background="@drawable/buttonstyle3"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlt_sickness"
                android:layout_margin="10dp"
                android:layout_width="0dp"
                android:layout_weight="1.1"
                android:onClick="btnsClick"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/sickness_main"/>
                <TextView
                    android:id="@+id/txt_sickness_tedad"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_margin="1dp"
                    android:text="10"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:background="@drawable/buttonstyle3"/>
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:weightSum="3">
            <RelativeLayout
                android:id="@+id/rlt_honey"
                android:layout_margin="10dp"
                android:layout_width="0dp"
                android:layout_weight="1.1"
                android:onClick="btnsClick"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/honey_main"/>
                <TextView
                    android:id="@+id/txt_honey_tedad"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_margin="1dp"
                    android:text="10"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:background="@drawable/buttonstyle3"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlt_avarez"
                android:layout_margin="10dp"
                android:layout_width="0dp"
                android:layout_weight="1.1"
                android:onClick="btnsClick"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/avarez"/>
                <TextView
                    android:id="@+id/txt_avarez_tedad"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_margin="1dp"
                    android:text="10"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:background="@drawable/buttonstyle3"/>
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:weightSum="3">
            <RelativeLayout
                android:id="@+id/rlt_bmi"
                android:layout_margin="10dp"
                android:layout_width="0dp"
                android:layout_weight="1.1"
                android:onClick="btnsClick"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bmi_main"/>


            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlt_tashkhis"
                android:layout_margin="10dp"
                android:layout_width="0dp"
                android:layout_weight="1.1"
                android:onClick="btnsClick"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/tashkhis"/>
                <TextView
                    android:id="@+id/txt_tashkhis_tedad"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_margin="1dp"
                    android:text="10"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:background="@drawable/buttonstyle3"/>
            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:visibility="visible"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:id="@+id/navi_view"
        app:headerLayout="@layout/header"
        app:menu="@menu/menu"/>
</androidx.drawerlayout.widget.DrawerLayout>